<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ChoosePOICategory">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:text="@string/select_a_poi_category" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/airports"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/airports"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/atms"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/atms"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/attractions"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/attractions"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/bakeries"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bakeries"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/campsites"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/campsites"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/food_stores"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/food_stores"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/free_wifi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/free_wifi"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/hotels"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hotels"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/lakes"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lakes"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/mc_donalds"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mc_donalds"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/monuments"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/monuments"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/parking"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/parking"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/petrol_station"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/petrol_station"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/picnic"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/picnic"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/railway_station"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/railway_station"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/religious_buildings"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/religious_buildings"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/restaurants"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurants"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/seaside"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/seaside"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/theatre"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/theatre"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/tram_stations"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tram_stations"
                    android:textSize="18sp" />

            </RadioGroup>

        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/select_poi_category"
        android:theme="@style/AppTheme.ButtonBlue"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <RadioButton
            android:id="@+id/five_kms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:text="@string/five_kms"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/ten_kms"
            app:layout_constraintEnd_toStartOf="@+id/ten_kms"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioButton
            android:id="@+id/ten_kms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/ten_kms"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/twenty_kms"
            app:layout_constraintStart_toEndOf="@+id/five_kms"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/twenty_kms"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:text="@string/twenty_kms"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/ten_kms"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ten_kms" />

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/buttonChooseRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="onSubmit"
        android:text="@string/select_poi_range"
        android:theme="@style/AppTheme.ButtonBlue"/>

    <Button
        android:id="@+id/confirmLocationButton"
        android:theme="@style/AppTheme.ButtonFuchsia"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/search"
        android:onClick="confirmPOICriteria"/>

</LinearLayout>